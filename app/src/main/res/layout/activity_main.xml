<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAE5"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="-150sp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/neredeyimicon"
        app:layout_constraintBottom_toTopOf="@+id/editTextKullanici"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/buttonUploadPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FF3D00"
        android:text="Resim Yükle"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonUploadPhoto"
        app:layout_constraintTop_toBottomOf="@id/imageView" />
    <EditText
        android:id="@+id/editTextTCKimlik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="TC Kimlik Numarası"
        android:visibility="gone" /> <!-- Başlangıçta gizli -->
    <EditText
        android:id="@+id/editTextFullName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Kullanıcı Adı" />
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Parola"
        android:inputType="textPassword" />
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF3D00"
        android:text="Giriş Yap" />
    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF3D00"
        android:text="Kayıt Ol" />
    <Button
        android:id="@+id/buttonForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:backgroundTint="#FFFAE5"
        android:text="Parolamı Unuttum"
        android:textColor="#FF3D00"
        android:textSize="12dp"
        android:textStyle="bold"
        android:translationX="115dp"
        android:translationY="-140dp" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Güvenlik ve gizliliğiniz için kimlik numaranızı kimseyle paylaşmayın!" />
</LinearLayout>
